<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DGA - Gestión de Vehículos</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />

    <!-- Estilos personalizados -->
    <link href="~/css/styles.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <!-- Logo/Header -->
            <div class="sidebar-heading text-center">
                <div class="d-flex align-items-center justify-content-center">
                    <i class="bi bi-truck-front-fill fs-2 me-2"></i>
                    <div>
                        <h4 class="mb-0 fw-bold text-white">DGA</h4>
                        <small class="text-white-50">Gestión Vehicular</small>
                    </div>
                </div>
            </div>

            <!-- Navigation Menu -->
            <div class="list-group list-group-flush">
                <!-- Dashboard -->
                <a href="@Url.Action("Index", "Dashboard")" class="list-group-item list-group-item-action active">
                    <i class="bi bi-speedometer2"></i>
                    Dashboard
                </a>

                <!-- Vehículos -->
                <a href="@Url.Action("Index", "Vehiculos")" class="list-group-item list-group-item-action">
                    <i class="bi bi-truck"></i>
                    Vehículos
                </a>

                <!-- Colaboradores -->
                <a href="@Url.Action("Index", "Colaboradores")" class="list-group-item list-group-item-action">
                    <i class="bi bi-people"></i>
                    Colaboradores
                </a>

                <!-- Asignaciones -->
                <a href="@Url.Action("Index", "Asignaciones")" class="list-group-item list-group-item-action">
                    <i class="bi bi-clipboard-check"></i>
                    Asignaciones
                </a>

                <!-- Mantenimientos -->
                <a href="@Url.Action("Index", "Mantenimientos")" class="list-group-item list-group-item-action">
                    <i class="bi bi-tools"></i>
                    Mantenimientos
                </a>

                <!-- Seguros -->
                <a href="@Url.Action("Index", "Seguros")" class="list-group-item list-group-item-action">
                    <i class="bi bi-shield-check"></i>
                    Seguros
                </a>

                <!-- Reportes -->
                <a href="@Url.Action("Index", "Reportes")" class="list-group-item list-group-item-action">
                    <i class="bi bi-bar-chart"></i>
                    Reportes
                </a>

                <!-- Separador -->
                <div class="border-top border-light opacity-25 mx-3 my-2"></div>

                <!-- Configuración -->
                <a href="@Url.Action("Index", "Configuracion")" class="list-group-item list-group-item-action">
                    <i class="bi bi-gear"></i>
                    Configuración
                </a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <!-- Navbar Superior -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
                <div class="container-fluid">
                    <!-- Botón de toggle del sidebar -->
                    <button class="btn btn-sm btn-toggle-sidebar" id="menu-toggle">
                        <i class="bi bi-list"></i>
                    </button>

                    <div class="navbar-brand ms-2">@ViewData["NavbarTitle"]</div>

                    <div class="d-flex align-items-center ms-auto">
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="d-none d-sm-inline">Admin User</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownUser">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Contenido Principal -->
            <div class="container-fluid content-section mt-3">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/app.js" asp-append-version="true"></script>

    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>